    "extract-css-version": "node ./scripts/extract-css-version.js",
    "build-cv": "./scripts/build-cv.sh",
    "update-cv": "node ./scripts/generate-latex.js && npm run generate-version && npm run build-cv && echo 'âœ… CV updated! Check git status for changes to commit.'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report",
    "e2e:vercel": "node ./scripts/run-e2e-vercel.js"
  },
